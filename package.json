{
    "name": "nextjs-boilerplate",
    "description": "NextJS Boilerplate built-in TypeScript, Prisma ORM and, Next-Auth",
    "version": "1.0.0",
    "license": "MIT",
    "author": "Batuhan GÃ¶ksu",
    "email": "batuhangoksu@gmail.com",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "build:stats": "cross-env ANALYZE=true npm run build",
        "build:prod": "run-s clean build export",
        "build:types": "tsc --noEmit --pretty",
        "start": "NODE_ENV=production next start",
        "export": "next export -o out",
        "clean": "rimraf .next out",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
        "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx . --fix",
        "format": "prettier --write .",
        "prepare": "husky install",
        "cy:open": "$(npm bin)/cypress open",
        "cy:run": "$(npm bin)/cypress run --headless",
        "prisma:gen": "prisma generate",
        "prisma:push": "prisma db push",
        "prisma:migrate": "prisma migrate dev --name $NAME",
        "prisma:studio": "prisma studio",
        "cloc": "npx cloc ."
    },
    "prisma": {
        "schema": "prisma/psql.prisma"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "prettier --write --ignore-unknown",
            "eslint --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn run lint-staged"
        }
    },
    "dependencies": {
        "@next-auth/prisma-adapter": "^1.0.1",
        "@prisma/client": "^3.13.0",
        "cypress": "^10.0.3",
        "cypress-real-events": "^1.7.0",
        "nanoid": "4.0.0",
        "next": "12",
        "next-auth": "^4.2.1",
        "next-seo": "^5.4.0",
        "next-translate": "^1.0.7",
        "query-string": "^7.1.1",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-query": "3.39.1"
    },
    "devDependencies": {
        "@next/bundle-analyzer": "^12.1.6",
        "@types/node": "^17.0.41",
        "@types/react": "^18.0.12",
        "@typescript-eslint/eslint-plugin": "^5.27.1",
        "cross-env": "^7.0.3",
        "eslint": "8.17.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-next": "^12.1.6",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jsx-a11y": "6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.1",
        "prisma": "^3.13.0",
        "rimraf": "^3.0.2",
        "typescript": "4.7.3"
    }
}
